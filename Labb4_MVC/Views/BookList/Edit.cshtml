@model Labb4_MVC.Models.BookList

@{
    ViewData["Title"] = "Edit";
}

<hr />

<h1>Edit</h1>
<h4>BookList</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookListID" />
            <div class="form-group">
                <label asp-for="BorrowingDate" class="control-label"></label>
                <input asp-for="BorrowingDate" class="form-control" type="datetime-local" />
                @if (Model.IsPastReturningDate)
                {
                    <span class="text-danger">Past returning date</span>
                }
                <span asp-validation-for="BorrowingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReturningDate" class="control-label"></label>
                <input asp-for="ReturningDate" class="form-control" />
                <span asp-validation-for="ReturningDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Returned" /> @Html.DisplayNameFor(model => model.Returned)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ReturnedAt" class="control-label"></label>
                <input asp-for="ReturnedAt" class="form-control" type="datetime-local"/>
                <span asp-validation-for="ReturnedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FK_CustomerID" class="control-label"></label>
                <select asp-for="FK_CustomerID" class="form-control" asp-items="ViewBag.FK_CustomerID"></select>
                <span asp-validation-for="FK_CustomerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FK_BookID" class="control-label"></label>
                <select asp-for="FK_BookID" class="form-control" asp-items="ViewBag.FK_BookID"></select>
                <span asp-validation-for="FK_BookID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
